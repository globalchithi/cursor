{
  "DefaultConfiguration": {
    "BaseUrl": "https://api.example.com",
    "TimeoutSeconds": 30,
    "DefaultHeaders": {
      "Accept": "application/json",
      "User-Agent": "ApiTestFramework/1.0"
    },
    "Retry": {
      "MaxRetries": 3,
      "DelayMilliseconds": 1000,
      "ExponentialBackoff": true,
      "RetryOnStatusCodes": [429, 500, 502, 503, 504]
    },
    "Logging": {
      "LogRequests": true,
      "LogResponses": true,
      "LogHeaders": false,
      "LogBody": true,
      "LogRequestHost": true,
      "LogLevel": "Information"
    },
    "Proxy": {
      "Host": "localhost",
      "Port": 8888,
      "BypassForLocal": true
    }
  },
  "Environments": {
    "Development": {
      "BaseUrl": "https://dev-api.example.com",
      "TimeoutSeconds": 60,
      "DefaultHeaders": {
        "Accept": "application/json",
        "User-Agent": "ApiTestFramework/1.0-dev"
      },
      "Authentication": {
        "Type": "ApiKey",
        "ApiKey": "dev-api-key-12345",
        "ApiKeyHeader": "X-API-Key"
      },
      "Logging": {
        "LogRequests": true,
        "LogResponses": true,
        "LogHeaders": true,
        "LogBody": true,
        "LogRequestHost": true,
        "LogLevel": "Debug"
      }
    },
    "Staging": {
      "BaseUrl": "https://staging-api.example.com",
      "TimeoutSeconds": 45,
      "DefaultHeaders": {
        "Accept": "application/json",
        "User-Agent": "ApiTestFramework/1.0-staging"
      },
      "Authentication": {
        "Type": "Bearer",
        "BearerToken": "staging-bearer-token-67890"
      },
      "Logging": {
        "LogRequests": true,
        "LogResponses": true,
        "LogHeaders": false,
        "LogBody": true,
        "LogRequestHost": true,
        "LogLevel": "Information"
      }
    },
    "Production": {
      "BaseUrl": "https://api.example.com",
      "TimeoutSeconds": 30,
      "DefaultHeaders": {
        "Accept": "application/json",
        "User-Agent": "ApiTestFramework/1.0"
      },
      "Authentication": {
        "Type": "OAuth2",
        "OAuth2": {
          "ClientId": "prod-client-id",
          "ClientSecret": "prod-client-secret",
          "TokenUrl": "https://auth.example.com/oauth/token",
          "Scope": "api:read api:write"
        }
      },
      "Retry": {
        "MaxRetries": 5,
        "DelayMilliseconds": 2000,
        "ExponentialBackoff": true
      },
      "Logging": {
        "LogRequests": false,
        "LogResponses": false,
        "LogHeaders": false,
        "LogBody": false,
        "LogRequestHost": false,
        "LogLevel": "Warning",
        "LogFilePath": "logs/api-tests.log"
      }
    }
  }
}

